{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@assets/*": ["assets/*"],
            "@base/*": ["base/*"],
            "@containers/*": ["containers/*"],
            "@layouts/*": ["layouts/*"],
            "@service/*": ["service/*"],
            "@utils/*": ["utils/*"],
            "@configs/*": ["configs/*"],
            "@library/*": ["library/*"]
        }
    },
    "exclude": ["node_modules", "**/*.test.ts", "dist"],
    "include": ["./**.*.ts", "src"]
}
